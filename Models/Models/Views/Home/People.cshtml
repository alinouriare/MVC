@model PersonSummary
@{
    Layout = null;
}
    <form method="post" asp-action="People">

        @for (int i = 0; i < 3; i++)
        {
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input name="[@i].LastName" class="form-group" />
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input name="[@i].FirstName" class="form-group" />
            </div>
        }





        <button type="submit" class="btn btn-primary"> Submit</button>


    </form>
