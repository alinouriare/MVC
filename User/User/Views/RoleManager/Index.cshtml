@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<div class="bg-primary m-1 p-1 text-white"><h4>Roles</h4></div>

<table class="table table-sm table-bordered">

    <tr><th>Id</th><th>Name</th><th>عملیات</th></tr>
    @if (Model.Count() == 0)
    {

        <tr><td colspan="3" class="text-center">No Role Exists</td></tr>

    }
    else
    {

        foreach (IdentityRole role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Name</td>
                <td>

                    <form asp-action="Delete" method="post" asp-route-id="@role.Id">
                        <button type="submit"  class="btn btn-sm btn-danger"> Delete</button>

                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                    </form>

                </td>
            </tr>
        }
    }
</table>

